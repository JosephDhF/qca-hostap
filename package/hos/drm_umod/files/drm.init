#!/bin/sh /etc/rc.common

START=99

USE_PROCD=1
PROG=/sbin/drm

start_service()
{
        echo 0 > /sys/kdrm_control/kdrm_disable
        procd_open_instance
        procd_set_param command "$PROG"
        procd_set_param respawn
        procd_close_instance
}

stop_service()
{
        echo 1 > /sys/kdrm_control/kdrm_disable
}
